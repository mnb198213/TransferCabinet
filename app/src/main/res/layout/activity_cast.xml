<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/theme_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
       android:background="@color/title_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交接柜管理-存证"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/small_title_size"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tv_statue"
                android:layout_width="120dp"
                android:layout_height="@dimen/btn_height"
                android:gravity="center"
                android:text="未登录"
                android:textColor="@color/smart_text_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="120dp"
                android:layout_height="@dimen/btn_height"
                android:layout_marginLeft="40dp"
                android:background="@drawable/shape_btn_sure"
                android:text="返回"
                android:textColor="@color/smart_text_color"
                android:textSize="@dimen/btn_text_size" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btn_hand_do"
            android:layout_width="220dp"
            android:layout_height="@dimen/btn_height"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape_btn_sure"
            android:text="手动录入证件号"
            android:textColor="@color/smart_text_color"
            android:textSize="@dimen/btn_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_dash_frame"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/empty_img" />

        <TextView
            android:id="@+id/tv_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/image"
            android:text="姓名：邹江邹江邹江邹"
            android:textColor="@color/smart_text_color"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_cab_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="ncskdjcnsdcnsd"
        android:textColor="@color/smart_text_color"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="180dp"
        android:layout_height="@dimen/btn_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_btn_sure"
        android:text="完成"
        android:textColor="@color/smart_text_color"
        android:textSize="@dimen/btn_text_size" />
</LinearLayout>