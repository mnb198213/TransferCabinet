<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background"
    tools:context="com.jintoufs.zj.transfercabinet.activity.HomeActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:paddingTop="25dp"
        android:paddingLeft="25dp"
        android:text="欢迎使用人事通行证件管理系统"
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/big_title_size"
        android:textStyle="bold|italic"
        android:background="@color/title_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_take"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_home"
            android:gravity="center"
            android:text="取证"
            android:textColor="@color/smart_text_color"
            android:textSize="@dimen/home_small_title_text" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:layout_weight="1"
            android:background="@drawable/shape_home"
            android:gravity="center"
            android:text="存证"
            android:textColor="@color/smart_text_color"
            android:textSize="@dimen/home_small_title_text" />

        <TextView
            android:id="@+id/tv_manager"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:layout_weight="1"
            android:background="@drawable/shape_home"
            android:gravity="center"
            android:text="交接柜管理"
            android:textColor="@color/smart_text_color"
            android:textSize="@dimen/home_small_title_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="2017.10.26"
        android:textSize="@dimen/time_text_size"
        android:textColor="#C4C4C4"
        android:gravity="end|center_vertical"
        android:background="#363636"
        android:paddingRight="20dp"/>
</RelativeLayout>
