<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jintoufs.zj.transfercabinet.activity.HomeActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="XXX人事通行证件交接系统"
        android:textColor="#454545"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_take"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_home"
            android:gravity="center"
            android:text="取证"
            android:textColor="@color/smart_text_color"
            android:textSize="@dimen/home_small_title_text" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_home"
            android:gravity="center"
            android:text="存证"
            android:textColor="@color/smart_text_color"
            android:textSize="@dimen/home_small_title_text" />

        <TextView
            android:id="@+id/tv_manager"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_home"
            android:gravity="center"
            android:text="交接柜管理"
            android:textColor="@color/smart_text_color"
            android:textSize="@dimen/home_small_title_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="2017.10.26"
        android:textSize="30sp"
        android:textColor="@color/smart_text_color"
        android:gravity="end"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"/>
</RelativeLayout>
