<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background"
    tools:context="com.jintoufs.zj.transfercabinet.activity.HomeActivity">
    <RelativeLayout
        android:id="@+id/rl_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:paddingLeft="25dp"
            android:paddingTop="25dp"
            android:text="申领人取证"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/small_title_size"
            android:textStyle="bold"
            android:background="@color/title_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="200dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:background="@drawable/shape_pickup_ll">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="请输入短信取证码："
                android:textColor="@color/title_text_color"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/shape_pickup_sll"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_number01"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_height"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="number"
                        android:textCursorDrawable="@null"
                        android:lines="1"
                        android:maxLength="1"
                        android:textColor="@color/input_text_color"
                        android:textSize="@dimen/item_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_height"
                        android:background="@color/input_text_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/item_margin"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_number02"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_height"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="1"
                        android:textCursorDrawable="@null"
                        android:textColor="@color/input_text_color"
                        android:textSize="@dimen/item_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_height"
                        android:background="@color/input_text_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/item_margin"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_number03"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_height"
                        android:background="@null"
                        android:gravity="center"
                        android:textCursorDrawable="@null"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="1"
                        android:textColor="@color/input_text_color"
                        android:textSize="@dimen/item_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_height"
                        android:background="@color/input_text_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/item_margin"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_number04"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_height"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="number"
                        android:textCursorDrawable="@null"
                        android:lines="1"
                        android:maxLength="1"
                        android:textColor="@color/input_text_color"
                        android:textSize="@dimen/item_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_height"
                        android:background="@color/input_text_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/item_margin"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_number05"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_height"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="number"
                        android:textCursorDrawable="@null"
                        android:lines="1"
                        android:maxLength="1"
                        android:textColor="@color/input_text_color"
                        android:textSize="@dimen/item_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_height"
                        android:background="@color/input_text_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/item_margin"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_number06"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_height"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="number"
                        android:lines="1"
                        android:textCursorDrawable="@null"
                        android:maxLength="1"
                        android:textColor="@color/input_text_color"
                        android:textSize="@dimen/item_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_height"
                        android:background="@color/input_text_color" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_sure"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/shape_btn_sure"
                        android:text="确认"
                        android:textColor="@color/title_text_color"
                        android:textSize="@dimen/btn_text_size" />

                    <Button
                        android:id="@+id/btn_back"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="100dp"
                        android:background="@drawable/shape_btn_sure"
                        android:text="返回"
                        android:textColor="@color/title_text_color"
                        android:textSize="@dimen/btn_text_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="2017.10.26"
        android:textSize="@dimen/time_text_size"
        android:textColor="#C4C4C4"
        android:gravity="end|center_vertical"
        android:background="#363636"
        android:paddingRight="20dp" />
</RelativeLayout>
