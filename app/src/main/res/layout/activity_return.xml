<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:text="XXX人事通行证件交接系统"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/big_title_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="120dp"
            android:layout_height="@dimen/btn_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="100dp"
            android:background="@drawable/shape_btn_sure"
            android:text="返回"
            android:textSize="@dimen/btn_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="存证"
            android:textColor="#454545"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_hand_do"
            android:layout_width="180dp"
            android:layout_height="@dimen/btn_height"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape_btn_sure"
            android:text="手动录入证件号"
            android:textSize="@dimen/btn_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="2017.10.26 10:30:12"
            android:textSize="@dimen/time_text_size"
            android:textColor="@color/smart_text_color"
            android:gravity="end"
            android:paddingRight="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/tv_time">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_examples"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_alignParentBottom="true"/>

            <Button
                android:id="@+id/btn_finish"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/rv_examples"
                android:text="完成"
                android:textSize="@dimen/btn_text_size"
                android:background="@drawable/shape_btn_sure"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_paperwork"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/btn_finish"
                android:padding="10dp"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>