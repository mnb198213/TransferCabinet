<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/theme_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交接柜管理-取证"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/small_title_size"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tv_statue"
                android:layout_width="120dp"
                android:layout_height="@dimen/btn_height"
                android:gravity="center"
                android:text="未登录"
                android:textColor="@color/smart_text_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="120dp"
                android:layout_height="@dimen/btn_height"
                android:layout_marginLeft="40dp"
                android:background="@drawable/shape_btn_sure"
                android:text="返回"
                android:textColor="@color/smart_text_color"
                android:textSize="@dimen/btn_text_size" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_open_all_cabinet"
                android:layout_width="180dp"
                android:layout_height="@dimen/btn_height"
                android:background="@drawable/shape_btn_sure"
                android:text="打开所有柜门"
                android:textColor="@color/smart_text_color"
                android:textSize="@dimen/btn_text_size" />

            <Button
                android:id="@+id/btn_finish"
                android:layout_width="180dp"
                android:layout_height="@dimen/btn_height"
                android:layout_marginLeft="150dp"
                android:background="@drawable/shape_btn_sure"
                android:text="完成"
                android:textColor="@color/smart_text_color"
                android:textSize="@dimen/btn_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/shape_ll_context"
                android:orientation="vertical"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingTop="1dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_title_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/title_background"
                    android:layout_gravity="center_horizontal" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_paperwork_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/title_background"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>