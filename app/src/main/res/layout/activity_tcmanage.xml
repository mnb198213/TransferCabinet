<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:background="@color/title_background">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="交接柜管理"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/small_title_size"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_statue"
                android:layout_width="200dp"
                android:layout_height="@dimen/btn_height"
                android:gravity="center"
                android:text="未登录"
                android:textColor="@color/smart_text_color"
                android:textSize="20sp"
                android:layout_gravity="bottom"/>

            <Button
                android:id="@+id/btn_back"
                android:layout_width="120dp"
                android:layout_height="@dimen/btn_height"
                android:layout_marginLeft="40dp"
                android:background="@drawable/shape_btn_sure"
                android:text="返回"
                android:layout_gravity="bottom"
                android:textColor="@color/smart_text_color"
                android:textSize="@dimen/btn_text_size" />
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_take"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_home"
            android:gravity="center"
            android:text="取证"
            android:textColor="@color/smart_text_color"
            android:textSize="@dimen/home_small_title_text" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:layout_weight="1"
            android:background="@drawable/shape_home"
            android:gravity="center"
            android:text="存证"
            android:textColor="@color/smart_text_color"
            android:textSize="@dimen/home_small_title_text" />

        <TextView
            android:id="@+id/tv_monitor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:layout_weight="1"
            android:background="@drawable/shape_home"
            android:gravity="center"
            android:text="柜门监控"
            android:textColor="@color/smart_text_color"
            android:textSize="@dimen/home_small_title_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="2017.10.26"
        android:textSize="@dimen/time_text_size"
        android:textColor="#C4C4C4"
        android:gravity="end|center_vertical"
        android:background="#363636"
        android:paddingRight="20dp"/>
</RelativeLayout>
