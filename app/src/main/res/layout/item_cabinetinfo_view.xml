<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="@dimen/title_list_item_width"
            android:layout_height="@dimen/title_list_item_height"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:gravity="center"
            android:textColor="@color/smart_text_color" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/smart_text_color" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="@dimen/title_list_item_width"
            android:layout_height="@dimen/title_list_item_height"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:gravity="center"
            android:textColor="@color/smart_text_color" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/smart_text_color" />

        <TextView
            android:id="@+id/tv_agency"
            android:layout_width="@dimen/title_list_item_width"
            android:layout_height="@dimen/title_list_item_height"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:gravity="center"
            android:textColor="@color/smart_text_color" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/smart_text_color" />

        <TextView
            android:id="@+id/tv_IDNumber"
            android:layout_width="@dimen/title_list_item_width"
            android:layout_height="@dimen/title_list_item_height"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:gravity="center"
            android:textColor="@color/smart_text_color" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/smart_text_color" />

        <TextView
            android:id="@+id/tv_cabinetId"
            android:layout_width="@dimen/title_list_item_width"
            android:layout_height="@dimen/title_list_item_height"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:gravity="center"
            android:textColor="@color/smart_text_color" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/smart_text_color" />

        <TextView
            android:id="@+id/tv_drawerId"
            android:layout_width="@dimen/title_list_item_width"
            android:layout_height="@dimen/title_list_item_height"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:gravity="center"
            android:textColor="@color/smart_text_color" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/smart_text_color" />

        <LinearLayout
            android:layout_width="@dimen/title_list_item_width"
            android:layout_height="@dimen/title_list_item_height"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:padding="5dp">
            <Button
                android:id="@+id/btn_open_drawer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:background="@drawable/shape_btn_sure"
                android:text="打开柜门"
                android:textColor="@color/smart_text_color"
                android:textSize="@dimen/btn_text_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>